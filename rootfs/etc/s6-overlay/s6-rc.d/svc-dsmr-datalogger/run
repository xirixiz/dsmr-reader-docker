#!/command/execlineb -P
# /etc/s6-overlay/s6-rc.d/dsmr_datalogger/run
# shellcheck shell=bash

with-contenv

if [[ "${DSMRREADER_OPERATION_MODE}" = standalone ]]; then
    echo "Starting DSMR Reader - datalogger..."
    cd /app || exit
    nice -n 5
    s6-setuidgid app
    /usr/local/bin/python3 -u /dsmr/manage.py dsmr_datalogger
else
    sleep infinity
fi